<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <TextView
        android:id="@+id/button_choose_image"
        android:layout_width="139dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        android:layout_toStartOf="@+id/edit_text_file_name"
        android:layout_toLeftOf="@+id/edit_text_file_name"
        android:text="Select item"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/edit_text_file_name"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:ems="10"
        android:hint="Enter phone number"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/button_upload"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="150dp"
        android:layout_marginBottom="-2dp"
        android:layout_toStartOf="@+id/text_view_show_uploads"
        android:layout_toLeftOf="@+id/text_view_show_uploads"
        android:background="@mipmap/file_upload"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/text_view_show_uploads"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="122dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="6dp"
        android:background="@mipmap/viewpics"
        android:gravity="center"
        android:textSize="16sp" />

    <ProgressBar
        android:layout_marginTop="10dp"
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="58dp" />

    <ImageView
        android:layout_above="@id/progress_bar"
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/edit_text_file_name"
        android:layout_centerHorizontal="true"
        app:srcCompat="@mipmap/myimage" />
</RelativeLayout>
